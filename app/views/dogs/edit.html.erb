
<% if @dog.errors.any? %>
  <div id="error_explanation">
      <h2><%= pluralize(@dog.errors.count, "error") %> prohibited this inquiry from being saved:</h2>
      <ul>
      <% @dog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
<% end %>

<%= form_for([current_owner, @dog]) do |f| %>

    <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :breed %>
    <%= f.text_field :breed %>
  </div>
  <div>
    <%= f.label :color %>
    <%= f.text_field :color %>
  </div>
  <div><%= f.label :photo_url, "Photo" %>
  <%= f.file_field :photo_url %>
  </div>
  <div>
    <%= f.label :gender %>
    <%= f.text_field :gender %>
  </div>

  <div>
    <%= f.label :personality_attributes %>
    <%= f.text_field :personality_attributes %>
  </div>
  <div>
    <%= f.submit 'Update dog' %>
  </div>
<% end %>
