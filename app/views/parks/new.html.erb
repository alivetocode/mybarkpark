<h1>Add a Park</h1>


<% if @park.errors.any? %>
  <div id="error_explanation">
      <h2><%= pluralize(@park.errors.count, "error") %> prohibited this inquiry from being saved:</h2>
      <ul>
      <% @park.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
<% end %>


<%= form_for (@park) do |f| %>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name, :autofocus => true %>
  </div>
  <div>
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>
  <div>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
  <div>
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>
  <div>
    <%= f.label :zip_code %>
    <%= f.text_field :zip_code %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <%= f.submit 'Add Park' %>
<%end %>
